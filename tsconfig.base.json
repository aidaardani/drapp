{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@paziresh24/apis/*": ["libs/apis/src/*"],
            "@paziresh24/apps/prescription/*": ["apps/prescription/src/*"],
            "@paziresh24/assets/*": ["libs/assets/*"],
            "@paziresh24/components/*": ["libs/components/src/*"],
            "@paziresh24/configs/*": ["libs/configs/*"],
            "@paziresh24/constants/*": ["libs/constants/src/*"],
            "@paziresh24/context/*": ["libs/context/src/*"],
            "@paziresh24/hooks/*": ["libs/hooks/src/*"],
            "@paziresh24/utils": ["libs/utils/src/index.js"],
            "@paziresh24/utils/*": ["libs/utils/src/*"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
